<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Camera Preview: Initially hidden, will fill the screen when active -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreviewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Original UI elements for voice commands and status -->
    <LinearLayout
        android:id="@+id/voiceUIGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Main interaction button - takes up most of the screen -->
        <Button
            android:id="@+id/mainButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/tap_to_speak"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/main_button_background"
            android:contentDescription="@string/main_button_description"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="10dp" />

        <!-- Status text for visual feedback -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voice_assistant_ready"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/status_description"
            android:visibility="visible" />

        <!-- Instructions text -->
        <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.5"
            android:contentDescription="@string/instructions_description"
            android:visibility="visible" />
    </LinearLayout>

</FrameLayout>